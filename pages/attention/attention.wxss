/* pages/show/attention.wxss */
image{
  width: 100%;
  height: 100%;
  border-radius: 10rpx 10rpx 0 0;
}
page {
  padding: 37rpx 20rpx;
  background:#F0F0F0;
  overflow: hidden;
  box-sizing: border-box;
}
.actUnits{
  height: 450rpx;
  border: 1rpx solid #CCCCCC;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 25rpx;
  overflow: hidden;
}
swiper {
  height:340rpx;
}

.actImg{
  height: 340rpx;
  overflow: hidden;
}
.slide-image{  
  width: 100%; 
  height:100%; 
}
.leftInfo{
  padding: 10rpx 0 20rpx 35rpx;
}
.leftInfo text:nth-of-type(1){
  font-size: 36rpx;
  height: 42rpx;
  color: #1A1A1A;
}
.leftInfo text:nth-of-type(2){
  display: block;
  height: 25rpx;
  line-height: 25rpx;
  margin-top: 12rpx;
  font-size: 32rpx;
  color: #555555;
  background-image: url(https://www.leiyi.club/img/jsy/icon_time2.png);
  background-repeat: no-repeat;
  background-size: 25rpx 25rpx;
  padding-left: 35rpx;
  background-position: left top;
}