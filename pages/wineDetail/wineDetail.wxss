page {
  background: #F0F0F0;
  padding:0;
  border:0;
  margin: 0;
}
.jinshi_detail_container{
  background-color: gainsboro;
}
.detail_header{
  background-color: white;
}
.detail_header_img{
  text-align: center;
  width: 100%;
  height: auto;
  border-bottom: 1rpx solid #E6E6E6;
  position: relative;
}
.icon_contact{
  position: absolute;
  right: 0;
  top:35rpx;
  background-image: url(https://www.leiyi.club/img/jsy/icon_contact.png);
  background-repeat: no-repeat;
  background-size:55rpx 195rpx ;
  width: 55rpx;
  height: 195rpx;
}
.detail_header_img swiper{
  width: 100%;
  height: 697rpx;
}
.detail_header_img swiper image{
  width: 100%;
  height: auto;
  display:inline;

}
.detail_header_name{
  margin: 10rpx 30rpx;
}
.detail_header_price{
  margin: 20rpx 0rpx;
  padding-bottom: 20rpx;
  margin-left: 30rpx;
  color: #FF5289;
  font-size: 36rpx;
  font-weight: bold;
}
.detail_header_price span{
  font-size: 26rpx;
  font-weight: normal;
}
.product_introduction{
  margin-bottom:100rpx;
}
.product_introduction_title span{
  width: 6rpx;
  height: 24rpx;
  background: #FF5289;
  display: inline-block;
  margin-right:15rpx;
}
.product_introduction_title{
  background-color: white;
  font-size:30rpx;
  font-weight: bold;
  padding:0 26rpx;
  height: 78rpx;
  line-height:78rpx;
}
.product_introduction_content{
  padding: 10rpx 50rpx;
  background: #F0F0F0;
}
