/* pages/user/user.wxss */
page {
  height: 100%;
  padding-bottom: 0;
  background-color: #F0F0F0;
}
.userHeader{
  width: 100%;
  height: 473rpx;
  margin-bottom: 25rpx; 
  background: url(https://www.leiyi.club/img/jsy/user_bg.jpg);
  background-repeat: no-repeat;
  background-size: 750rpx 473rpx;
  background-position: 0 0;
  overflow: hidden;
}

.userHeader .photo{
  width: 160rpx ;
  height: 160rpx;
  text-align: center;
  position: fixed;
  left: 50%;
  top: 0;
  margin-left: -80rpx;
}
.userHeader .photo image{
  width: 160rpx;
  height: 160rpx;
  border: 4rpx solid #fff;
  border-radius: 50%;
  display: block;
  margin-bottom: 20rpx;
}
.userHeader .photo text{
  color: #fff;
  font-size: 40rpx; 
}
.list{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 36rpx;
  border-top: 1rpx solid #D9D9D9;
  padding:0 40rpx;
  box-sizing: border-box;
  background: #fff;
}
.noBorder{
  border-top:0;
}
.marginTop{
  margin-top: 20rpx;
}

.userList navigator:nth-of-type(1) .iconName{
  background-image: url(https://www.leiyi.club/img/jsy/icon_user_price.png);
  background-size: 32rpx 34rpx;
}
.userList navigator:nth-of-type(2) .iconName{
  background-image: url(https://www.leiyi.club/img/jsy/icon_user_card.png);
  background-size: 37rpx 26rpx;
}
.userList navigator:nth-of-type(3) .iconName{
  background-image: url(https://www.leiyi.club/img/jsy/icon_user_game.png);
  background-size: 36rpx 26rpx;
}
.userList navigator:nth-of-type(4) .iconName{
  background-image: url(https://www.leiyi.club/img/jsy/icon_user_wedding.png);
  background-size: 43rpx 40rpx;
  
}
.list .iconName{
  float: left;
  width: 645rpx;
  height: 98rpx;
  background-repeat: no-repeat;
  background-position: center left;
}
.list .iconName text{
  vertical-align: middle;
  color: #555555;
  margin-left:60rpx;
}
.list span.arrow{
  float: left;
  width: 20rpx;
  height: 98rpx;
  background: url(https://www.leiyi.club/img/jsy/icon_arrow.png);
  background-size: 20rpx 35rpx;
  background-repeat: no-repeat;
  background-position: center;
}
.arrow image{
  width: 100%;
  height: 100%;
}