page {
  height: 100%;
  padding: 50rpx 0;
  background-color: #F0F0F0;
}
.prizeItem{
  height: 175rpx;
  margin: 0 15rpx;
  overflow: hidden;
  background: #fff;
  margin-bottom: 30rpx;
}
.btBorder{
  padding:25rpx 30rpx;
  box-sizing: border-box;
}
.prizeItem .prizePic{
  width:125rpx; 
  height:125rpx;
  float: left;
  margin-right: 40rpx;
}
.prizeItem .prizePic image{
  width: 100%;
  height: 100%;
}
.prizeInfo{
  float: left;
}
.prizeInfo view{
  display: block;
  font-size: 28rpx;
  color: #555555;
}
.prizeInfo span{
  display: inline-block;
  color: #42BB67;
  width: 140rpx;
  height: 30rpx;
}
/*不中奖的样式*/
.prizeInfo span.noPrize{
  color: #FF7F8F;
}
.prizeInfo text.theme{
  color: #555555;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
